@model CuaHangVHT.Data.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Xóa Sản Phẩm</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger fw-bold">Bạn có chắc muốn xóa sản phẩm này không?</h5>
            <div class="mt-4">
                <h4 class="text-primary">Chi Tiết Sản Phẩm</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Tên Sản Phẩm</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4 fw-bold">Mô tả</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-4 fw-bold">Giá Bán</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                    <dt class="col-sm-4 fw-bold">Số Lượng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                    <dt class="col-sm-4 fw-bold">Image URL</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ImageUrl)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày Bán</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày Cập Nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>

                    <dt class="col-sm-4 fw-bold">Loại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
                </dl>
            </div>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="ProductId" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
