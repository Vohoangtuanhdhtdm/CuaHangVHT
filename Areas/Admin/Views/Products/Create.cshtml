@model CuaHangVHT.Data.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Tạo Sản Phẩm Mới</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" type="number" class="form-control" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Stock" class="form-label fw-bold"></label>
                    <input asp-for="Stock" type="number" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-bold"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    @* <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                    <input asp-for="ImageUrl" type="url" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span> *@
                    <div class="form-group mb-4">
                        <label asp-for="ImageUrl" class="form-label fw-semibold text-secondary mb-2">Ảnh sản phẩm</label>
                        <div class="file-upload-area border border-dashed rounded-3 p-4 text-center position-relative
         border-secondary hover:bg-light hover:border-primary transition duration-200 ease-in-out">
                            <input type="file" asp-for="ImageUrl" name="ImageUrl"
                                   class="form-control-file position-absolute top-0 start-0 opacity-0 w-100 h-100"
                                   style="cursor: pointer;" />
                            <div class="upload-placeholder">
                                <i class="bi bi-cloud-arrow-up-fill display-4 text-primary mb-2" style="font-size: 2rem;"></i>
                                <p class="mb-0 text-muted" style="font-size: 0.9rem;">Nhấn vào đây để tải hình ảnh sản phẩm lên</p>
                            </div>
                        </div>
                        <div class="form-text text-danger mt-1">
                            <span asp-validation-for="ImageUrl"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Tạo Ngay
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Trang Quản Lý Chung
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
