@model IEnumerable<CuaHangVHT.Data.Promotion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<p>
    <a asp-action="Create">Tạo Chương Trình Khuyến Mãi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên Chương Trình Khuyến Mãi
            </th>
            <th>
               Phần Trăm Khuyến Mãi
            </th>
            <th>
                Thời Gian Bắt Đầu
            </th>
            <th>
                Thời Gian Kết Thúc
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PromotionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartPrDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndPrDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PromotionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PromotionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PromotionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
