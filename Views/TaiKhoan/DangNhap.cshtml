@model CuaHangVHT.ViewModels.DangNhapViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "_LayoutSystem";
}

<div class="login-register-area pt-115 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list ">
                        <a class="active">
                            <h4> Đăng Nhập </h4>
                        </a>
                        
                    </div>
                    <div >
                            <div class="login-form-container">
                                <div class="login-register-form">
                                <form asp-controller="TaiKhoan" asp-action="DangNhap" asp-route-ReturnUrl="@ViewBag.ReturnUrl">
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control" type="password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                
                                    <div class="form-group">
                                        <a asp-controller="TaiKhoan" asp-action="Dangky">Đăng kí tài khoản</a>
                                    </div>
                                    <div class="form-group">
                                        <a asp-controller="TaiKhoan" asp-action="QuenMatKhau">Quên Mật Khẩu</a>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                                </form>
                                   
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
</div>