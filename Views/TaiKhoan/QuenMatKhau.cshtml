@model CuaHangVHT.ViewModels.QuenMatKhauViewModel
@{
   
    Layout = "_LayoutSystem";
}




<div class="login-register-area pt-115 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list ">
                        <a class="active">
                            <h4> Quên Mật Khẩu  </h4>
                        </a>

                    </div>
                    <div>
                        <div class="login-form-container">
                            <div class="login-register-form">
                                <form asp-action="QuenMatKhau" method="post">
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Gửi liên kết đặt lại mật khẩu</button>
                                </form>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>