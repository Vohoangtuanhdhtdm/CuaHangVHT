                <li>
                        <a style="color:#6c757d;" asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                    <li>
                        <a class="active" asp-controller="HangHoa" asp-action="Detail">Chi tiết sản phẩm</a>
                    </li>
            </ul>
