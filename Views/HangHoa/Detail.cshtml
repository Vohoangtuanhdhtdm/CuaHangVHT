</div>}
<div class="product-details-area pt-120 pb-115">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product-details-tab">
                    <div class="pro-dec-big-img-slider">
                        <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                                <a href="~/assets/images/product/">
                                    <img src="~/assets/images/product/@Model.Hinh" alt="">
                                </a>
                            </div>
                            <a class="easyzoom-pop-up img-popup" href="~/assets/images/product/@Model.Hinh"><i class="icon-size-fullscreen"></i></a>
                        </div>
                        <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                                <a href="~/assets/images/product/@Model.Hinh">
                                    <img src="~/assets/images/product/@Model.Hinh" alt="">
                                </a>
                            </div>
                            <a class="easyzoom-pop-up img-popup" href="~/assets/images/product/@Model.Hinh"><i class="icon-size-fullscreen"></i></a>
                        </div>
                        <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                                <a href="~/assets/images/product/@Model.Hinh">
                                    <img src="~/assets/images/product/@Model.Hinh" alt="">
                                </a>
                            </div>
                            <a class="easyzoom-pop-up img-popup" href="~/assets/images/product/@Model.Hinh"><i class="icon-size-fullscreen"></i></a>
                        </div>
                        <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                                <a href="~/assets/images/product/@Model.Hinh">
                                    <img src="~/assets/images/product/@Model.Hinh" alt="">
                                </a>
                            </div>
                            <a class="easyzoom-pop-up img-popup" href="~/assets/images/product/@Model.Hinh"><i class="icon-size-fullscreen"></i></a>
                        </div>
                        <div class="easyzoom-style">
                            <div class="easyzoom easyzoom--overlay">
                                <a href="~/assets/images/product/@Model.Hinh">
                                    <img src="~/assets/images/product/@Model.Hinh" alt="">
                                </a>
                            </div>
                            <a class="easyzoom-pop-up img-popup" href="~/assets/images/product/@Model.Hinh"><i class="icon-size-fullscreen"></i></a>
                        </div>
                    </div>
                    <div class="product-dec-slider-small product-dec-small-style1">
                        <div class="product-dec-small active">
                            <img src="~/assets/images/product/@Model.Hinh" alt="">
                        </div>
                        <div class="product-dec-small">
                            <img src="~/assets/images/product/@Model.Hinh" alt="">
                        </div>
                        <div class="product-dec-small">
                            <img src="~/assets/images/product/@Model.Hinh" alt="">
                        </div>
                        <div class="product-dec-small">
                            <img src="~/assets/images/product/@Model.Hinh" alt="">
                        </div>
                        <div class="product-dec-small">
                            <img src="~/assets/images/product/@Model.Hinh" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product-details-content pro-details-content-mrg">
                    <h2>@Model.TenHH</h2>
                    <p>@Model.MoTaNgan</p>
                    <div class="pro-details-price">
                        <span class="new-price"> @string.Format("{0:N0} VND", @Model.DonGia)</span>
                        
                    </div>
                
                  
                    <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.MaHh">
                        <div class="pro-details-size">
                            <label style="font-size:large; font-weight:500;" for="size">Size:</label>
                            <div class="form-check">
                                @foreach (var itemSize in Model.Sizes)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="size" value="@itemSize.IdSize">
                                        <label class="form-check-label" for="size">
                                            @itemSize.Size - (@itemSize.Quantity)
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    <div class="pro-details-quality">
                       @*  <span>Số Lượng: @Model.soLuong</span> *@
                        <div class="cart-plus-minus">
                            <input class="cart-plus-minus-box" type="text" name="quantity" value="1">
                        </div>
                    </div>
                    <div class="product-details-meta">
                          <span style="font-size:large; font-weight:500">Loại: <span> @Model.TenLoai</span></span>
                    </div>
                    <div class="pro-details-action-wrap">
                        <div class="pro-details-add-to-cart">
                                <button style="background-color:#343a40; color:#f8f9fa;" class="btn shadow-sm d-flex align-items-center" title="Add to Cart">Thêm Vào Giỏ </button>
                        </div>
                        <div class="pro-details-action">
                            <a title="Add to Wishlist" href="#"><i class="icon-heart"></i></a>
                            <a class="social" title="Social" href="#"><i class="icon-share"></i></a>
                            <div class="product-dec-social">
                                <a class="facebook" title="Facebook" href="#"><i class="icon-social-facebook"></i></a>
                                <a class="twitter" title="Twitter" href="#"><i class="icon-social-twitter"></i></a>
                                <a class="instagram" title="Instagram" href="#"><i class="icon-social-instagram"></i></a>
                                <a class="pinterest" title="Pinterest" href="#"><i class="icon-social-pinterest"></i></a>
                            </div>
                        </div>
						</div>
					</form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="description-review-wrapper pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="dec-review-topbar nav mb-45">
                    <a class="active" data-bs-toggle="tab" href="#des-details1">Mô tả</a>
                    
                  
             
                </div>
                <div class="tab-content dec-review-bottom">
                    <div id="des-details1" class="tab-pane active">
                        <div class="description-wrap">
                            <p>@Model.MoTaNgan</p>
                            
                        </div>
                    </div>
             
                   
            
                </div>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("RelatedProducts", new { productId = @Model.MaHh })

